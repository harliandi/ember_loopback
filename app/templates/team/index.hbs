<div class="team-container">
  {{! Back Button }}
  <div class="back-container">
    <LinkTo @route="index" class="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Back to Teams
    </LinkTo>
  </div>

  {{! Header Section }}
  <div class="team-header">
    <div class="header-content">
      <div class="title-group">
        <h1 class="team-name">{{this.model.team.name}}</h1>
        <p class="team-description">{{this.model.team.description}}</p>
      </div>
      <LinkTo
        @route="team.member.new"
        @model={{this.model.team}}
        class="add-button"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Add Member
      </LinkTo>
    </div>
  </div>

  {{! Members Section }}
  <div class="members-section">
    <h2 class="section-title">Team Members</h2>
    <div class="member-grid">
    {{#each this.model.members as |member|}}
      <div class="member-card">
        <div class="card-actions">
          <LinkTo
            @route="team.member.edit"
            @models={{array this.model.team.id member.id}}
            class="icon-button edit-button"
          >
            <svg viewBox="0 0 24 24" width="16">
              <path fill="currentColor" d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
            </svg>
          </LinkTo>
          <button
            type="button"
            class="icon-button delete-button"
            {{on "click" (fn this.deleteMember member)}}
          >
            <svg viewBox="0 0 24 24" width="16">
              <path fill="currentColor" d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
            </svg>
          </button>
        </div>
        <div class="card-content">
          <h3 class="member-name">{{member.name}}</h3>
          <p class="member-role">{{member.role}}</p>
        </div>
      </div>
    {{else}}
        <div class="no-members">
          <p>No members found in this team</p>
        </div>
      {{/each}}
    </div>
  </div>
</div>